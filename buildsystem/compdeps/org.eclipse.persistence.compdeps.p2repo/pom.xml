<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.eclipse.persistence</groupId>
        <artifactId>compdeps</artifactId>
        <version>1.0.5-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <name>EclipseLink Compilation Dependencies p2 Repository</name>
    <artifactId>org.eclipse.persistence.compdeps.p2repo</artifactId>
    <packaging>eclipse-repository</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-p2-repository-plugin</artifactId>
                <version>${tycho.version}</version>
                <configuration>
                    <includeAllDependencies>true</includeAllDependencies>
                </configuration>
            </plugin>
            <!-- Required there for source packages. Some source packages doesn't contain OSGi info and can't be specified in feature.xml file. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-sources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>jakarta.xml.bind</groupId>
                                    <artifactId>jakarta.xml.bind-api</artifactId>
                                    <version>${jakarta.xml.bind.version}</version>
                                    <classifier>sources</classifier>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/repository/plugins</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-binaries-without-osgi-info</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.sun.xml.ws</groupId>
                                    <artifactId>jaxws-rt</artifactId>
                                    <version>${com.sun.xml.ws.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.weld</groupId>
                                    <artifactId>weld-api</artifactId>
                                    <version>${jboss.weld.api.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.weld</groupId>
                                    <artifactId>weld-spi</artifactId>
                                    <version>${jboss.weld.api.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.weld.environment</groupId>
                                    <artifactId>weld-environment-common</artifactId>
                                    <version>${jboss.weld.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.weld.se</groupId>
                                    <artifactId>weld-se-core</artifactId>
                                    <version>${jboss.weld.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jboss.weld</groupId>
                                    <artifactId>weld-core-impl</artifactId>
                                    <version>${jboss.weld.version}</version>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/repository/plugins</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-oracle-binaries</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.oracle.database.jdbc</groupId>
                                    <artifactId>ojdbc8</artifactId>
                                    <version>${oracle.jdbc.version}</version>
                                    <destFileName>ojdbc.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.oracle.database.nls</groupId>
                                    <artifactId>orai18n</artifactId>
                                    <version>${oracle.jdbc.version}</version>
                                    <destFileName>orai18n.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.oracle.database.xml</groupId>
                                    <artifactId>xdb</artifactId>
                                    <version>${oracle.jdbc.version}</version>
                                    <destFileName>xdb.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.oracle.database.xml</groupId>
                                    <artifactId>xmlparserv2</artifactId>
                                    <version>${oracle.jdbc.version}</version>
                                    <destFileName>xmlparserv2.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.oracle.database.jdbc</groupId>
                                    <artifactId>ucp</artifactId>
                                    <version>${oracle.jdbc.version}</version>
                                    <destFileName>ucp.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.oracle.database.observability</groupId>
                                    <artifactId>dms</artifactId>
                                    <version>${oracle.jdbc.version}</version>
                                    <destFileName>dms.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.oracle.database.messaging</groupId>
                                    <artifactId>aqapi</artifactId>
                                    <version>${oracle.apapi.version}</version>
                                    <destFileName>aqapi.jar</destFileName>
                                </artifactItem>
                                <!--Oracle NoSQL DB-->
                                <artifactItem>
                                    <groupId>com.oracle.kv</groupId>
                                    <artifactId>oracle-nosql-client</artifactId>
                                    <version>${oracle.nosql.version}</version>
                                    <destFileName>kvclient.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/repository/oracle_plugins</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>

