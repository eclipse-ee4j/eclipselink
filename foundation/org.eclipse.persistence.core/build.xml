<project name="org.eclipse.persistence.core" default="build" basedir=".">
    <available file="../${ant.project.name}" type="dir" property="core.is.local"/>
    <!-- Test to make sure that the calling script doesn't inherit the variable -->
    <!-- (should be set locally, and be destroyed upon return) -->
    <fail message="Not running from '${ant.project.name}' directory" unless="core.is.local"/>

    <dirname  property="core.build.location" file="${ant.file.org.eclipse.persistence.core}"/>
    <condition property="core.2.base.dir" value="../.." else="..">
        <contains string="${core.build.location}" substring="foundation"/>
    </condition>
    <property name="core.2.common.plugins.dir" value="${core.2.base.dir}/plugins"/>

    <!-- TEMPORARY HACK PENDING DECISION ABOUT WHETHER ECLIPSELINK FOUNDATION WILL DEPEND ON JPA CLASSES -->
    <condition property="core.2.jpa.plugins.dir" value="../../jpa/plugins" else="../plugins">
        <contains string="${core.build.location}" substring="foundation"/>
    </condition>
    <!-- End of Temporary hack -->

    <property file="${user.home}/build.properties"/>
    <property file="./build.properties"/>

    <!-- versioning -->
    <!-- These variables  are set in autobuild.xml. A manual build gets defaults -->
    <tstamp>
       <format property="build.date" pattern="yyyyMMdd"/>
       <format property="build.time" pattern="HHmm"/>
    </tstamp>
    <property name="build.type" value="SNAPSHOT"/>
    <property name="svn.revision" value="NA"/>
    <property name="version.string" value="${release.version}.qualifier"/>
    <property name="release.designation"  value="EclipseLink DeveloperBuild"/>
    <property name="eclipselink.core.bndl.prefix" value="${ant.project.name}"/>

    <!-- Set Compile Path-->
    <path id="core.compile.path">
        <pathelement path="${core.2.common.plugins.dir}/${antlr}"/>
        <pathelement path="${core.2.common.plugins.dir}/${asm}"/>
        <fileset
            dir="${core.2.common.plugins.dir}"
            includes="${eclipselink.core.depend}"/>

    </path>
    <available file="${core.2.common.plugins.dir}/${antlr}_${version.string}.jar" property="antlr.bundle.exist"/>
    <available file="${core.2.common.plugins.dir}/${asm}_${version.string}.jar" property="asm.bundle.exist"/>

    <!-- all -->
    <target name="build" depends="clean, compile, generate-manifest, package" description="build Core component"/>

    <!-- clean -->
    <target name="clean" description="Clean the build">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${classes.dir}"/>
            <fileset dir="${core.2.common.plugins.dir}" includes="${eclipselink.core.bndl.prefix}*.jar"/>
        </delete>
    </target>

    <!-- compile -->
    <target name="compile" description="Compile EclipseLink Core">
        <fail message="Cannot find ANTLR: '${core.2.common.plugins.dir}/${antlr}_${version.string}.jar'." unless="antlr.bundle.exist"/>
        <fail message="Cannot find ASM: '${core.2.common.plugins.dir}/${asm}_${version.string}.jar'." unless="asm.bundle.exist"/>
        <mkdir dir="${classes.dir}"/>
        <echo message="Stamping the following values:"/>
        <echo message="version:       '${release.version}'"/>
        <echo message="buildDate:     '${build.date}'"/>
        <echo message="buildTime:     '${build.time}'"/>
        <echo message="buildType:     '${build.type}'"/>
        <echo message="buildRevision: '${svn.revision}'"/>
        <filter token="VERSION" value="${release.version}"/>
        <filter token="BUILD_DATE" value="${build.date}"/>
        <filter token="BUILD_TIME" value="${build.time}"/>
        <filter token="BUILD_TYPE" value="${build.type}"/>
        <filter token="BUILD_REVISION" value="${svn.revision}"/>
        <copy file="${src.dir}/org/eclipse/persistence/Version.java" tofile="${basedir}/${classes.dir}/org/eclipse/persistence/Version.java" filtering="true"/>
        <javac srcdir="${classes.dir}"
               destdir="${classes.dir}"
               includes="org/eclipse/persistence/Version.java"
               debug="${javac.debug}"
               debuglevel="${javac.debuglevel}"
               optimize="${javac.optimize}"
               source="${javac.version}"
               target="${javac.version}"
               deprecation="${javac.deprecation}"
               failonerror="true"
               memoryMaximumSize="512m"
               fork="true"
               classpathref="core.compile.path"
        />
        <javac srcdir="${src.dir}"
               destdir="${classes.dir}"
               includes="org/eclipse/persistence/**, deprecated/**"
               excludes="org/eclipse/persistence/Version.java"
               debug="${javac.debug}"
               debuglevel="${javac.debuglevel}"
               optimize="${javac.optimize}"
               source="${javac.version}"
               target="${javac.version}"
               deprecation="${javac.deprecation}"
               failonerror="true"
               memoryMaximumSize="512m"
               fork="true"
               classpathref="core.compile.path"
        />
    </target>

    <!-- package -->
    <target name="package" description="jar OSGI bundle">
        <jar jarfile="${core.2.common.plugins.dir}/${eclipselink.core.bndl.prefix}_${version.string}.jar" manifest="${classes.dir}/MANIFEST.MF">
            <fileset dir="${core.2.base.dir}">
                <include name="about.html"/>
                <include name="readme.html"/>
                <include name="license.*"/>
            </fileset>
            <fileset dir="${classes.dir}">
                <include name="org/eclipse/persistence/**/*.class"/>
            </fileset>
            <fileset dir="${resource.dir}">
                <include name="xsd/*.xsd"/>
                <include name="org/eclipse/persistence/internal/helper/VendorNameToPlatformMapping.properties"/>
            </fileset>
        </jar>
        <jar jarfile="${core.2.common.plugins.dir}/${eclipselink.core.bndl.prefix}.source_${version.string}.jar">
             <manifest>
                <attribute name="Bundle-ManifestVersion" value="2"/>
                <attribute name="Bundle-Name"            value="EclipseLink Core Source"/>
                <attribute name="Bundle-SymbolicName"    value="${ant.project.name}.source"/>
                <attribute name="Bundle-Version"         value="${release.version}"/>
                <attribute name="Eclipse-SourceBundle"   value="${ant.project.name};version=&quot;${release.version}&quot;"/>
            </manifest>
            <fileset dir="${core.2.base.dir}">
                <include name="about.html"/>
                <include name="readme.html"/>
                <include name="license.*"/>
            </fileset>
            <fileset dir="${classes.dir}">
                <include name="org/eclipse/persistence/Version.java"/>
            </fileset>
            <fileset dir="${src.dir}">
                <include name="org/eclipse/persistence/**/*.java"/>
                <exclude name="org/eclipse/persistence/Version.java"/>
            </fileset>
            <fileset dir="${resource.dir}">
                <include name="xsd/*.xsd"/>
                <include name="org/eclipse/persistence/internal/helper/VendorNameToPlatformMapping.properties"/>
            </fileset>
        </jar>
        <delete file="${classes.dir}/org/eclipse/persistence/Version.java"/>
    </target>

