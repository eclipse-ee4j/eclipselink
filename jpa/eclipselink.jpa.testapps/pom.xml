<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>org.eclipse.persistence.parent</artifactId>
        <groupId>org.eclipse.persistence</groupId>
        <version>4.0.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <artifactId>org.eclipse.persistence.jpa.testapps</artifactId>

    <name>Persistence TestApps</name>

    <properties>
        <maven.deploy.skip>true</maven.deploy.skip>

        <eclipselink.logging.level>INFO</eclipselink.logging.level>
        <persistence-unit.data-source-name>jdbc/EclipseLinkDS</persistence-unit.data-source-name>
        <persistence-unit.data-source-type>jta-data-source</persistence-unit.data-source-type>
        <persistence-unit.transaction-type>JTA</persistence-unit.transaction-type>
        <persistence-unit.server-weaving>true</persistence-unit.server-weaving>
        <persistence-unit.data-source2-name>jdbc/EclipseLinkDS2</persistence-unit.data-source2-name>
        <persistence-unit.data-source3-name>jdbc/EclipseLinkDS3</persistence-unit.data-source3-name>
    </properties>

    <dependencyManagement>
        <!-- what test apps do produce and depend on -->
        <dependencies>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.composite.advanced.common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.composite.advanced.member_1</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.composite.advanced.member_2</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.composite.advanced.member_3</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.xml.composite.advanced.common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.xml.composite.advanced.member_1</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.xml.composite.advanced.member_2</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.xml.composite.advanced.member_3</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.xml.extended.composite.advanced.member_1</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.xml.extended.composite.advanced.member_2</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>org.eclipse.persistence.jpa.testapps.xml.extended.composite.advanced.member_3</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>jakarta.persistence</groupId>
            <artifactId>jakarta.persistence-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.persistence</groupId>
            <artifactId>org.eclipse.persistence.jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.ejb</groupId>
            <artifactId>jakarta.ejb-api</artifactId>
        </dependency>
        <!--EclipseLink Core test framework-->
        <!-- some models use classes defined here -->
        <dependency>
            <groupId>org.eclipse.persistence</groupId>
            <artifactId>org.eclipse.persistence.core.test.framework</artifactId>
        </dependency>

        <dependency>
            <groupId>${db.driver.groupId}</groupId>
            <artifactId>${db.driver.artifactId}</artifactId>
            <version>${db.driver.version}</version>
            <scope>runtime</scope>
        </dependency>

        <!--Test dependencies-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <scope>test</scope>
        </dependency>
        <!--EclipseLink JPA test framework-->
        <dependency>
            <groupId>org.eclipse.persistence</groupId>
            <artifactId>org.eclipse.persistence.jpa.test.framework</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <modules>
        <module>jpa.test.advanced.multitenant</module>
        <module>jpa.test.beanvalidation</module>
        <module>jpa.test.beanvalidation.dynamic</module>
        <module>jpa.test.composite.advanced</module>
        <module>jpa.test.composite.advanced/common</module>
        <module>jpa.test.composite.advanced/member_1</module>
        <module>jpa.test.composite.advanced/member_2</module>
        <module>jpa.test.composite.advanced/member_3</module>
        <module>jpa.test.pu with spaces</module>
        <module>jpa.test.sessionbean</module>
        <module>jpa.test.xml.advanced.multitenant</module>
        <module>jpa.test.xml.composite.advanced</module>
        <module>jpa.test.xml.composite.advanced/common</module>
        <module>jpa.test.xml.composite.advanced/member_1</module>
        <module>jpa.test.xml.composite.advanced/member_2</module>
        <module>jpa.test.xml.composite.advanced/member_3</module>
        <module>jpa.test.xml.extended.composite.advanced</module>
        <module>jpa.test.xml.extended.composite.advanced/member_1</module>
        <module>jpa.test.xml.extended.composite.advanced/member_2</module>
        <module>jpa.test.xml.extended.composite.advanced/member_3</module>
        <module>nativeapi</module>
    </modules>

    <build>
        <finalName>${project.artifactId}</finalName>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <!--Resolve dependencies into Maven properties like ${org.eclipse.persistence:org.eclipse.persistence.jpa:jar} for JPA module-->
                        <execution>
                            <id>get-test-classpath-to-properties</id>
                            <goals>
                                <goal>properties</goal>
                            </goals>
                            <phase>none</phase>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.carlspring.maven</groupId>
                    <artifactId>derby-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>start-derby</id>
                            <goals>
                                <goal>start</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>stop-derby</id>
                            <goals>
                                <goal>stop</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>package-se-tests</id>
                            <goals>
                                <goal>test-jar</goal>
                            </goals>
                            <phase>none</phase>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <useModulePath>true</useModulePath>
                </configuration>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <configuration>
                            <systemPropertyVariables>
                                <test.properties>${test.properties.file}</test.properties>
                            </systemPropertyVariables>
                            <workingDirectory>${project.build.directory}/test-out</workingDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <!-- see https://github.com/lukasj/eclipselink-build-support -->
                <groupId>org.eclipse.persistence</groupId>
                <artifactId>eclipselink-testbuild-plugin</artifactId>
                <version>0.0.1</version>
<!--                <extensions>true</extensions>-->
                <executions>
                    <execution>
                        <id>package-server-tests</id>
                        <goals>
                            <goal>package-testapp</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <mode>EAR</mode>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- XXX - under construction: run tests on the server
                 requires manual JDBC DS creation
                 for now hardcoded to WildFly
                 and EAR/EJB-jars built by custom plugin -->
            <id>xxx-wildfly</id>
            <properties>
                <server.test.runner.context>${project.build.finalName}/${project.build.finalName}_ejb</server.test.runner.context>
                <wildfly.deploy.skip>false</wildfly.deploy.skip>
                <ignore.server.failures>false</ignore.server.failures>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <version>2.1.0.Beta1</version>
                        <executions>
                            <execution>
                                <id>server-deploy</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>deploy-only</goal>
                                </goals>
                                <configuration>
                                    <skip>${wildfly.deploy.skip}</skip>
                                    <force>true</force>
                                    <filename>${project.build.finalName}.ear</filename>
                                    <username>${wildfly.username}</username>
                                    <password>${wildfly.password}</password>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>server-test</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <additionalClasspathElements>
                                        <!--TODO It should be replaced by https://search.maven.org/artifact/org.wildfly/wildfly-client-all/27.0.0.Alpha2/jar resolved by dependency plugin-->
                                        <additionalClasspathElement>${wildfly.home}/bin/client/jboss-client.jar</additionalClasspathElement>
                                    </additionalClasspathElements>
                                    <reportNameSuffix>server</reportNameSuffix>
                                    <systemPropertyVariables>
                                        <java.naming.factory.initial>org.wildfly.naming.client.WildFlyInitialContextFactory</java.naming.factory.initial>
                                        <server.run>TRUE</server.run>
                                        <is.JTA>true</is.JTA>
                                        <server.url>remote+http://localhost:8080</server.url>
                                        <server.testrunner.context>${server.test.runner.context}</server.testrunner.context>
                                    </systemPropertyVariables>
                                    <testFailureIgnore>${ignore.server.failures}</testFailureIgnore>
                                    <workingDirectory>${project.build.directory}/test-out/server</workingDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
