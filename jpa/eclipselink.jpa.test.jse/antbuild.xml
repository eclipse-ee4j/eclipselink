<project name="eclipselink.jpa.test.jse" default="test" basedir=".">
    <property name="jse.src.dir"        value="${basedir}/src"/>
    <property name="jse.classes.dir"    value="${basedir}/classes" />
    <property name="reports.dir"        value="${basedir}/reports" />

    <property name="jse.el.root" value="${basedir}/../.."/>
    <property name="jse.plugins.dir" value="${jse.el.root}/plugins"/>
    
    <property name="jpa.jse.el.root" value="../"/>
    <property name="jpa.jse.plugins.dir" value="${jpa.jse.el.root}/plugins"/>

    <!-- Not sure if there is a better way to refer to dependencies? -->
    <property name="jse.eclipselink.jar" value="${jse.el.root}/eclipselink.jar"/>
    <property name="javax.annotation.api" value="${jse.plugins.dir}/javax.annotation-api-1.3.2.jar"/>
    <property name="javax.el.api" value="${jse.plugins.dir}/javax.el-api-3.0.1-b06.jar"/>
    <property name="javax.transaction" value="${jse.plugins.dir}/javax.transaction_1.1.0.v201002051055.jar"/>
    <property name="javax.validation" value="${jse.plugins.dir}/javax.validation_1.1.0.v201304101302.jar"/>
    <property name="javax.inject" value="${jse.plugins.dir}/javax.inject-1.jar"/>
    <property name="javax.interceptor" value="${jse.plugins.dir}/javax.interceptor-api-1.2.2.jar"/>
    <property name="javax.enterprise.cdi-api" value="${jse.plugins.dir}/cdi.api_2.0.v201705091004.jar"/>
    <property name="jboss.classfilewriter" value="${jse.plugins.dir}/jboss-classfilewriter-1.2.4.Final.jar"/>
    <property name="jboss.logging" value="${jse.plugins.dir}/jboss-logging-3.4.1.Final.jar"/>
    <property name="jboss.weld.api" value="${jse.plugins.dir}/weld-api-3.1.SP3.v202008110916.jar"/>
    <property name="jboss.weld.spi" value="${jse.plugins.dir}/weld-spi-3.1.SP3.v202008110916.jar"/>
    <property name="jboss.weld.environment.common" value="${jse.plugins.dir}/weld-environment-common-3.1.5.SP1.v202008280510.jar"/>
    <property name="jboss.weld.se.core" value="${jse.plugins.dir}/weld-se-core-3.1.5.SP1.v202008280510.jar"/>
    <property name="jboss.weld.core.impl" value="${jse.plugins.dir}/weld-core-impl-3.1.5.SP1.v202008280510.jar"/>


