      <jdbc-mapping>
         <jdbc-type>LONGVARBINARY</jdbc-type>
         <database-type>image</database-type>
      </jdbc-mapping>
      <jdbc-mapping>
         <jdbc-type>LONGVARCHAR</jdbc-type>
         <database-type>text</database-type>
      </jdbc-mapping>
      <jdbc-mapping>
         <jdbc-type>NCHAR</jdbc-type>
