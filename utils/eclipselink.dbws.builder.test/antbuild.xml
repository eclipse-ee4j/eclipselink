    <!-- compile -->
    <target name="compile"/>

<!--
11/10/27 MWN
    <target name="package" description="package DBWS Util Test Common jar">
        <jar jarfile="./${dbwsutils.test.jar}">
            <fileset dir="${classes.dir}">
                <include name="dbws/testing/*.class"/>
            </fileset>
        </jar>
    </target>
